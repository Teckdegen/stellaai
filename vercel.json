{
  "builds": [
    {
      "src": "scripts/install-clarinet.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "scripts/**",
          "lib/**",
          "components/**",
          "app/**",
          "!**/node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/validate",
      "dest": "/app/api/validate/route.ts"
    },
    {
      "src": "/api/validate-clarity",
      "dest": "/api/validate-clarity/route.ts"
    }
  ],
  "buildCommand": "node scripts/install-clarinet.js && pnpm build",
  "outputDirectory": ".next"
}